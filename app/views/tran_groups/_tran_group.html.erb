<div id="<%= dom_id tran_group %>">
  <a style="text-decoration: none"href="<%= tran_group_tran_details_path(tran_group, @tran_group) %>">
    <div class="card mb-3" style="max-width: 940px;">
      <div class="row g-0">
        <div class="col-md-2 p-4">
          <%= raw tran_group.icon %>
        </div>
        <div class="col-md-4">
          <div class="card-body">
            <h2> <%= tran_group.groupName %></h2>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
        <% @total_value = TranDetail.where(author_id: current_user, tran_groups_id: tran_group.id).sum(:amount)%>
        <div class="col-md-4">
          <div class="card-body">
            <strong>Group Total: <%= @total_value %></strong>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
