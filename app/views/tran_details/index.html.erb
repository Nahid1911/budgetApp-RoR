<p style="color: green"><%= notice %></p>
<h1>TRANSACTION SUMMARY</h1>
<div id="tran_details">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">S.L</th>
        <th scope="col">Transection Details</th>
        <th scope="col">Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @tran_summary.each do |tran|%>
        <tr>
          <td scope="row"><%= tran.id %></td>
          <td scope="row"><%= tran.itemDetails %></td>
          <td scope="row"><%= tran.amount %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<%= link_to "Create Transaction", new_tran_detail_path, class: "btn btn-outline-success" %>
<%= link_to "Back Index", tran_groups_path, class: "btn btn-outline-warning" %>
